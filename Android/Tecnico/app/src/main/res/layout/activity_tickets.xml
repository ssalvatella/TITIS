<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tickets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kenzo.tecnico.TicketsActivity">
    <ListView
        android:id="@+id/lvActTicketsListaTareas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnActTicketsTickets"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="TICKETS"/>
        <Button
            android:id="@+id/btnActTicketsMensajes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="MENSAJES"/>
        <Button
            android:id="@+id/btnActTicketsNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="NOTIFICACIÃ“N"/>
    </LinearLayout>
</LinearLayout>
