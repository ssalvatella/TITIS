<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mensajes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kenzo.tecnico.MensajesActivity">
    <EditText
        android:id="@+id/txtActMensajesDestinarario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:hint="Destinatario"/>
    <EditText
        android:id="@+id/txtActMensajesAsunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:hint="Asunto"/>
    <EditText
        android:id="@+id/txtActMensajesMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="Mensaje"/>
    <Button
        android:id="@+id/btnActMensajesEnviar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enviar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnActMensajesTickets"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="TICKETS"/>
        <Button
            android:id="@+id/btnActMensajesMensajes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="MENSAJES"/>
        <Button
            android:id="@+id/btnActMensajesNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="NOTIFICACIÃ“N"/>
    </LinearLayout>
</LinearLayout>
